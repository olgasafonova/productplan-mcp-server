{
  "name": "ProductPlan MCP Argument Correctness",
  "description": "Tests for correct argument extraction in ProductPlan tool calls",
  "version": "1.1.0",
  "tests": [
    {
      "id": "roadmap-id-1",
      "tool": "get_roadmap",
      "prompt": "Show me roadmap 12345",
      "expected_args": {
        "roadmap_id": "12345"
      },
      "required_args": ["roadmap_id"],
      "category": "roadmaps"
    },
    {
      "id": "roadmap-bars-1",
      "tool": "get_roadmap_bars",
      "prompt": "Get bars from roadmap abc",
      "expected_args": {
        "roadmap_id": "abc"
      },
      "required_args": ["roadmap_id"],
      "category": "bars"
    },
    {
      "id": "bar-get-1",
      "tool": "get_bar",
      "prompt": "Show details of bar 789",
      "expected_args": {
        "bar_id": "789"
      },
      "required_args": ["bar_id"],
      "category": "bars"
    },
    {
      "id": "bar-create-1",
      "tool": "manage_bar",
      "prompt": "Create a bar called 'API Integration' on roadmap 123 in lane 456 starting 2024-01-15 ending 2024-03-15",
      "expected_args": {
        "action": "create",
        "roadmap_id": "123",
        "lane_id": "456",
        "name": "API Integration",
        "starts_on": "2024-01-15",
        "ends_on": "2024-03-15"
      },
      "required_args": ["action"],
      "category": "create"
    },
    {
      "id": "bar-update-1",
      "tool": "manage_bar",
      "prompt": "Update bar 789 to end on 2024-06-30",
      "expected_args": {
        "action": "update",
        "bar_id": "789",
        "ends_on": "2024-06-30"
      },
      "required_args": ["action"],
      "category": "update"
    },
    {
      "id": "bar-delete-1",
      "tool": "manage_bar",
      "prompt": "Delete bar 456",
      "expected_args": {
        "action": "delete",
        "bar_id": "456"
      },
      "required_args": ["action"],
      "category": "delete"
    },
    {
      "id": "bar-connection-create-1",
      "tool": "manage_bar_connection",
      "prompt": "Create dependency from bar 111 to bar 222",
      "expected_args": {
        "action": "create",
        "bar_id": "111",
        "target_bar_id": "222"
      },
      "required_args": ["action", "bar_id"],
      "category": "create"
    },
    {
      "id": "bar-connection-delete-1",
      "tool": "manage_bar_connection",
      "prompt": "Remove connection 999 from bar 123",
      "expected_args": {
        "action": "delete",
        "bar_id": "123",
        "connection_id": "999"
      },
      "required_args": ["action", "bar_id"],
      "category": "delete"
    },
    {
      "id": "bar-link-create-1",
      "tool": "manage_bar_link",
      "prompt": "Add link to Jira ticket https://jira.example.com/PROJ-123 on bar 456 named 'Jira Ticket'",
      "expected_args": {
        "action": "create",
        "bar_id": "456",
        "url": "https://jira.example.com/PROJ-123",
        "name": "Jira Ticket"
      },
      "required_args": ["action", "bar_id"],
      "category": "create"
    },
    {
      "id": "lane-create-1",
      "tool": "manage_lane",
      "prompt": "Create lane 'Mobile' with color #FF5733 on roadmap 123",
      "expected_args": {
        "action": "create",
        "roadmap_id": "123",
        "name": "Mobile",
        "color": "#FF5733"
      },
      "required_args": ["action", "roadmap_id"],
      "category": "create"
    },
    {
      "id": "lane-update-1",
      "tool": "manage_lane",
      "prompt": "Rename lane 456 to 'Backend' on roadmap 123",
